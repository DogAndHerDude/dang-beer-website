{
  "extends": ["tslint:recommended", "tslint-react", "tslint-config-prettier"],
  "linterOptions": {
    "exclude": [
      "node_modules"
    ]
  },
  "rules": {
    "no-var-requires": false,
    "eofline": true,
    "no-empty": true,
    "no-eval": true,
    "use-isnan": true,
    "deprecation": true,
    "triple-equals": true,
    "switch-default": true,
    "no-var-keyword": true,
    "no-misused-new": true,
    "no-sparse-arrays": true,
    "no-duplicate-super": true,
    "prefer-object-spread": true,
    "unnecessary-constructor": true,
    "unnecessary-bind": true,
    "prefer-switch": true,
    "import-spacing": true,
    "semicolon": [true, "always"],
    "quotemark": [true, "single", "jsx-double", "avoid-escape", "avoid-template"],
    "object-literal-key-quotes": [true, "as-needed"],
    "whitespace": [true, "check-branch", "check-decl", "check-operator", "check-separator", "check-rest-spread", "check-type"],
    "variable-name": [true, "check-format", "allow-leading-underscore", "allow-trailing-underscore", "allow-snake-case"],
    "no-bitwise": false,
    "object-literal-sort-keys": false,
    "no-console": false,
    "ordered-imports": false,
    "no-angle-bracket-type-assertion": false,
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "always",
          "typeLiterals": "ignore"
        },
        "esSpecCompliant": true
      }
    ],
    "array-type": [true, "generic"]
  }
}